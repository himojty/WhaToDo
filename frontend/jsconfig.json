{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@features/*": [
        "src/features/*"
      ],
      "@widgets/*": [
        "src/widgets/*"
      ],
      "@app/*": [
        "src/app/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}